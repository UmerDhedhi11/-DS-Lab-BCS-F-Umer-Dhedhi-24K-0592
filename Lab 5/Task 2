void functionA(int n){
if(n >= 1){
cout << n << " ";
return functionB(n-1);
}
}

void functionB(int n){
if(n >= 1){
cout << n << " ";
return functionA(n-1);
}
}

int main(){
int n, fact;
cout << "Enter number to print upto: ";
cin >> n;
functionA(n);

1.
#include <iostream>
using namespace std;

void printNumbers(int n){
if(n >= 1){
cout << n << " ";
return printNumbers(n-1);
}
}

int main(){
int n, fact;
cout << "Enter number to print upto: ";
cin >> n;
printNumbers(n);
return 0;
}


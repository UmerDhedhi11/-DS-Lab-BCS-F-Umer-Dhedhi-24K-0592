#include <iostream>
#include <cstring>
using namespace std;

class Node{
	public:
	    int data;
	    Node* next;
	    Node(int v){ 
			data = v; 
			next = NULL; 
		}
};

class CircularList{
	public:
	    Node* head;
	    CircularList(){
			head = NULL; 
		}
	    void insert(int v){
	        Node* n = new Node(v);
	        if(!head){
	            head = n;
	            n->next = head;
	        } 
			else{
	            Node* p = head;
	            while(p->next != head){ 
					p = p->next;
				}
	            p->next = n;
	            n->next = head;
	        }
	    }
};

int josephus(int n, int k){
    CircularList cl;
    int i;
    for(i=1;i<=n;i++){
		cl.insert(i);
    }
	Node* curr = cl.head;
    Node* prev = NULL;
    int count;
    while(curr->next != curr){
        for(count = 1; count < k; count++){
            prev = curr;
            curr = curr->next;
        }
        prev->next = curr->next;
        Node* del = curr;
        curr = curr->next;
        delete del;
    }
    int survivor = curr->data;
    delete curr;
    return survivor;
}

int main(){
    int n, k;
    cout << "n: ";
    cin >> n;
    cout << "\nk: ";
    cin >> k;
    cout << josephus(n, k) << "\n";
    return 0;
}

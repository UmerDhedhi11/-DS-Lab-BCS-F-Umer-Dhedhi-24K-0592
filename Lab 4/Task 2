#include <iostream>
using namespace std;

void bubbleSort(int arr[], int n){
	int i, x, temp;
	for(i=0;i<n;i++){
		for(x=0;x<n-1;x++){
			if(arr[x] > arr[x+1]){
				temp = arr[x];
				arr[x] = arr[x+1];
				arr[x+1] = temp;
			}
		}
	}
	cout << "Sorted Array: " << endl;
	for(i=0;i<n;i++){
		cout << arr[i] << "  ";
	}
}

int main(){
	int i, n;
	cout << "Enter array size: ";
	cin >> n;
	int num[n]; 
	cout << "Enter elements: " << endl;
	for(i=0;i<n;i++){
		cout << "Element " << i+1 << ": ";
		cin >> num[i];
	}
	cout << "Unsorted Array: " << endl;
	for(i=0;i<n;i++){
		cout << num[i] << "  ";
	}
	cout << endl << endl;
	bubbleSort(num, n);
	return 0;
}

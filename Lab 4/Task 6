#include <iostream>
using namespace std;

void combSort(int arr[], int n, int &comparisons, int &swaps){
    int gap = n;
    int i, temp;
    bool swapped = true;
    while(gap>1 || swapped){
        gap = (gap*10)/13;
        if (gap < 1){
			gap = 1;
		}
        swapped = false;
        for(i=0;i+gap<n;i++){
            comparisons++;
            if(arr[i] > arr[i+gap]){
                temp = arr[i];
                arr[i] = arr[i+gap];
                arr[i+gap] = temp;
                swaps++;
                swapped = true;
            }
        }
    }
    cout << "Sorted Array:" << endl;  
    for (i=0;i<n;i++){
		cout << arr[i] << "  ";
	}
    cout << endl;
    cout << "Comparisons: " << comparisons << endl;
    cout << "Swaps: " << swaps << endl;

}

int main(){
    int n, i;
    cout << "Enter array size: ";
    cin >> n;
    int arr[n];
    cout << "Enter elements: " << endl;
    for(i= 0;i<n;i++){
		cout << "Element " << i+1 << ": ";
		cin >> arr[i];
	}
    int comparisons = 0, swaps = 0;
    combSort(arr, n, comparisons, swaps);
    return 0;
}

#include <iostream>
using namespace std;

void selectionSort(int arr[], int n){
	int i, x, temp, min;
	for(i=0;i<n;i++){
		min = i;
		for(x=i+1;x<n;x++){
			if(arr[x] < arr[min]){
				min = x;
			}
		}
		temp = arr[i];
		arr[i] = arr[min];
		arr[min] = temp;
	}
	cout << "Sorted Array: " << endl;
	for(i=0;i<n;i++){
		cout << arr[i] << "  ";
	}
}

int main(){
	int i, n;
	cout << "Enter array size: ";
	cin >> n;
	int num[n]; 
	cout << "Enter elements: " << endl;
	for(i=0;i<n;i++){
		cout << "Element " << i+1 << ": ";
		cin >> num[i];
	}
	cout << "Unsorted Array: " << endl;
	for(i=0;i<n;i++){
		cout << num[i] << "  ";
	}
	cout << endl << endl;
	selectionSort(num, n);
	return 0;
}

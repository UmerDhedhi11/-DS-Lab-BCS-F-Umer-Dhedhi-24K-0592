#include <iostream>
using namespace std;

int main(){
    int n, m, i, j;
    cout << "Enter number of days: ";
    cin >> n;
    cout << "Enter number of readings per day: ";
    cin >> m;
    double** temps = new double*[n];
    for(i=0;i<n;i++){
        temps[i] = new double[m];
        cout << "Day " << i+1 << ":" << endl;
        for(j=0;j<m;j++){
            cout << "  Enter reading " << j+1 << ": ";
            cin >> temps[i][j];
        }
    }
    double* dailyAvg = new double[n];
    for(i=0;i<n;i++){
        double sum = 0;
        for(j=0;j<m;j++){
            sum += temps[i][j];
        }
        dailyAvg[i] = sum / m;
    }
    cout << "\nDaily average temperatures:" << endl;
    for(i=0;i<n;i++){
        cout << "Day " << i+1 << ": " << dailyAvg[i] << endl;
    }
    int hottest = 0, coldest = 0;
    for(i=1;i<n;i++){
        if(dailyAvg[i] > dailyAvg[hottest]){
            hottest = i;
        }
        if(dailyAvg[i] < dailyAvg[coldest]){
            coldest = i;
        }
    }

    cout << "\nHottest day: Day " << hottest+1 << " (Avg = " << dailyAvg[hottest] << ")" << endl;
    cout << "Coldest day: Day " << coldest+1 << " (Avg = " << dailyAvg[coldest] << ")" << endl;
    for(i=0;i<n;i++){
        delete[] temps[i];
    }
    delete[] temps;
    delete[] dailyAvg;
    return 0;
}

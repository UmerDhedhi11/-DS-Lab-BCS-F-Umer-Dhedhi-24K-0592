#include <iostream>
#include <cstring>
using namespace std;

int main(){
int** arr;
int b;
int s;
int i, x;
cout << "Enter number of benches: ";
cin >> b;
cout << "Enter number of seats on every bench: ";
cin >> s;
arr = new int*[b];
for(i=0;i<b;i++){
arr[i] = new int[s];
}
for(i=0;i<b;i++){
for(x=0;x<s;x++){
arr[i][x] = 0;
}
}
for(i=0;i<b;i++){
for(x=0;x<s;x++){
cout << arr[i][x] << " ";
}
cout << endl;
}
cout << "Enter '0' for empty seats and '1' for filled" << endl;
for(i=0;i<b;i++){
for(x=0;x<s;x++){
cout << "Bench " << i+1 << " Seat " << x+1 << ": ";
cin >> arr[i][x];
}
}
for(i=0;i<b;i++){
for(x=0;x<s;x++){
cout << arr[i][x] << " ";
}
cout << endl;
}
for(i=b-1;i>=0;i--){
delete[] arr[i];
}
delete arr;
return 0;
}

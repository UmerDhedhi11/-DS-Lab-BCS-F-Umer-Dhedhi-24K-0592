#include <iostream>
using namespace std;

class SafePointer{
	private:    
		int* ptr;
	public:
	    SafePointer(){
	        ptr = new int;
	    }
	    void setValue(int val){
	        *ptr = val;
	    }
	    int getValue(){
	        return *ptr;
	    }
	    void release(){
	        delete ptr;
	        ptr = NULL;
	    }
};

int main(){
    SafePointer student[5];
    int marks, i;
    for(i=0;i<5;i++){
        cout << "Enter marks of Student " << i+1 << ": ";
        cin >> marks;
        student[i].setValue(marks);
    }
    cout << "Marks of students:" << endl;
    for(int i=0;i<5;i++){
        cout << student[i].getValue() << endl;
    }
    for(int i=0;i<5;i++){
        student[i].release();
    }
    return 0;
}

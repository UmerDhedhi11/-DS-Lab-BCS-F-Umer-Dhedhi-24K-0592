#include <iostream>
using namespace std;

class MaxHeap {
private:
   int heap[100];
   int size, i;
void heapifyUp(int i){
       while(i>0 && heap[i] > heap[(i-1)/2]){
           swap(heap[i], heap[(i-1)/2]);
           i = (i-1)/2;
       }
   }
   void heapifyDown(int i){
       while(true){
           int left = 2*i + 1;
           int right = 2*i + 2;
           int largest = i;
           if (left<size && heap[left]>heap[largest]){
               largest = left;
}
           if (right < size && heap[right] > heap[largest]){
               largest = right;
}
           if (largest == i){
               break;
}
           swap(heap[i], heap[largest]);
           i = largest;
       }
   }
public:
   MaxHeap(){
size = 0;
}
   void insert(int val){
       heap[size] = val;
       heapifyUp(size);
       size++;
   }
   void build(int arr[], int n){
       size = n;
       for(i=0;i<n;i++){
heap[i] = arr[i];
}
       for(i = (size/2)-1;i>=0;i--){
           heapifyDown(i);
       }
   }
   void update_key(int i, int new_val){
       if(i<0 || i>=size){
           cout << "Invalid index\n";
           return;
       }
       int old_val = heap[i];
       heap[i] = new_val;
       if(new_val > old_val){
           heapifyUp(i);  
       }
       else{
           heapifyDown(i);  
       }
   }
   void delete_key(int i){
       if(i<0 || i>=size){
           cout << "Invalid index\n";
           return;
       }
       heap[i] = heap[size - 1];
       size--;
       heapifyUp(i);
       heapifyDown(i);
   }
   void printHeap(){
       for (i=0;i<size;i++){
           cout << heap[i] << " ";
       }
       cout << endl;
   }
};

int main(){
    MaxHeap h;
int arr[] = {8, 7, 6, 5, 4};
    h.build(arr, 5);
    cout << "Initial Heap: ";
    h.printHeap();
h.update_key(2, 10);
    cout << "After update: ";
    h.printHeap();
    h.delete_key(1);
    cout << "After deletion: ";
    h.printHeap();
    return 0;
}

#include <iostream>
using namespace std;

class HeapConverter{
	private:
		int i, t, l, r, largest;
	public:
	    void heapify(int arr[], int n, int i){
	        largest = i;
	        l = 2*i + 1;
	        r = 2*i + 2;
	        if(l<n && arr[l]>arr[largest]){
				largest = l;
			}
	        if(r<n && arr[r]>arr[largest]){
				largest = r;
			}
	        if(largest != i){
	            t = arr[i];
	            arr[i] = arr[largest];
	            arr[largest] = t;
	            heapify(arr, n, largest);
	        }
	    }
	    void convertToMaxHeap(int arr[], int n){
	        for(i=(n/2)-1;i>=0;i--){
	            heapify(arr, n, i);
	        }
	    }
};

int main(){
    int arr[] = {1, 2, 6, 4, 9, 19, 10, 11, 17, 7};
    int n = 10;
	int i;
    HeapConverter obj;
    obj.convertToMaxHeap(arr, n);
    for(i=0;i<n;i++){
        cout << arr[i] << " ";
    }
    return 0;
}
